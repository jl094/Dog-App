@model DogApp.Models.DogViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div align="center" width="500px">
    @using (Html.BeginForm("Edit", "Dog", FormMethod.Post))
    {
        <table class="table" width="400px" cellpadding="20">
            <tr>
                <td>@Html.LabelFor(model => model.dog.Breed)</td>
                <td>@Html.TextBoxFor(model => model.dog.Breed)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.dog.SubBreed)</td>
                <td>@Html.TextBoxFor(model => model.dog.SubBreed)</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Save" />@Html.HiddenFor(model=>model.dog.Id)</td>
            </tr>

        </table>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>